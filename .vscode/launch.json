    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Server",
            "type": "debugpy",
            "request": "launch",
            "module": "ocpp16_min.server",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "OTEL_SERVICE_NAME": "ocpp16-server",
                "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317"
            }
        },
        {
            "name": "Python Debugger: Client",
            "type": "debugpy",
            "request": "launch",
            "module": "ocpp16_min.client",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "OTEL_SERVICE_NAME": "ocpp16-client",
                "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317"
            }
        }
    ]
}